<<if !$pc.__start4Init>>
  <<set $pc.status = setup.ID.STATUS.PEASANT>>
  <<set $pc.title  = setup.ID.TITLE.NONE>>
  <<run setup.setAff($pc, "ACADEMY", "YEAR_1", "APPLIED_MAGIC", "ENROLLED")>>
  <<set $pc.__start4Init = 1>>
<</if>>

